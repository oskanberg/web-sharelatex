nav.navbar.navbar-default
	.container-fluid
		.navbar-header
			button.navbar-toggle(ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed", ng-class="{active: !navCollapsed}")
				i.fa.fa-bars
			if nav.title
				a(href='/').navbar-title #{nav.title}
			else
				a(href='/').navbar-brand

		.navbar-collapse.collapse(collapse="navCollapsed")
			
			ul.nav.navbar-nav.navbar-right
				if (freeTrial && freeTrial.exists)
					if (freeTrial.timeRemaining > -1 && !freeTrial.downgraded)
						li.subdued
							a(href="/user/subscription/new?planCode=#{settings.paidPlanCode}") You have #{Math.ceil(freeTrial.timeRemaining / (24 * 60 * 60 * 1000))} days of free trial remaining
					if (freeTrial.downgraded)
						li.trial-expired
							span
								a(href="/user/subscription/new?planCode=#{settings.paidPlanCode}").text-danger Your free trial has expired!
								a(href="/user/subscription/new?planCode=#{settings.paidPlanCode}").btn.btn-success Buy Now
				each item in nav.header
					if ((item.only_when_logged_in && session && session.user) || (item.only_when_logged_out && (!session || !session.user)) || (!item.only_when_logged_out && !item.only_when_logged_in))
						if item.dropdown
							li.dropdown(class=item.class)
								a.dropdown-toggle(href)
									| !{translate(item.text)}
									b.caret
								ul.dropdown-menu
									each child in item.dropdown
										if child.divider
											li.divider
										else
											li
												if child.url
													a(href=child.url, class=child.class) !{translate(child.text)}
												else
													| !{translate(child.text)}
						else
							li(class=item.class)
								if item.url
									a(href=item.url, class=item.class) !{translate(item.text)}
								else
									| !{translate(item.text)}
				

